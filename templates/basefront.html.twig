{% block javascripts %}
    <script>

    /*header et index*/
        var isUp = false;
        var lastPosition = actualPosition;
        var actualPosition = this.scrollY;
        function headerOver(header) {
            if(isUp) {
                header.style["box-shadow"] = "none";
                header.style["background-color"] = "#19c3d4";
            }
        }
        function headerOut(header) {
            if(isUp) {
                header.style["box-shadow"] = "rgba(245, 245, 245, 0.655) 0 5px 10px";
                header.style["background-color"] = "rgba(245, 245, 245, 0.556)";
            }
        }
        window.addEventListener("scroll", (event) => {
            lastPosition = actualPosition;
            actualPosition = this.scrollY;

            //Remonter
            if(actualPosition < window.innerHeight && !isUp) {
                window.scroll(0, 0);
                document.getElementById("header").style["box-shadow"] = "rgba(245, 245, 245, 0.655) 0 5px 10px";
                document.getElementById("header").style["background-color"] = "rgba(245, 245, 245, 0.556)";
            }
            if(actualPosition <= 5) {
                isUp = true;
            }
            
            //Redescendre
            if(actualPosition > lastPosition && actualPosition < window.innerHeight && isUp) {
                window.scroll(0, window.innerHeight + 15);
            }
            if(actualPosition > window.innerHeight) {
                isUp = false;
                document.getElementById("header").style["box-shadow"] = "rgba(0, 1, 3, 0.537) 0 0 15px";
                document.getElementById("header").style["background-color"] = "rgba(0, 1, 3, 1)";
            }
        });
    </script>
